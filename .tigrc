#! vi:set syntax=bash
#
# Doc : http://jonas.nitro.dk/tig/manual.html
# Need tig version 2.2.2 or greater!


set vertical-split = 0

set main-options = -n 200

# line numbers
set pager-view = line-number:yes,interval=5 text
set line-graphics = default

# display
set line-graphics = default

set main-view = line-number:yes,interval=5 \
                date:custom,format="%Y-%m-%d %Hh" \
                author:full,width=15 \
                commit-title:graph=v1,refs=yes

set diff-view = text:yes,commit-title-overflow=no

set blame-view = line-number:yes,interval=10 \
                 date:default \
                 author:full \
                 file-name:auto \
                 id:yes,color \
                 text

set status-view = line-number:yes \
                  status \
                  file-name

set wrap-lines = true

set split-view-height = 85%

# color date red black bold

# navigation
set horizontal-scroll = 30
set ignore-case = 1
